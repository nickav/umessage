{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "format": "yarn f $(git ls-files -c -m | grep '\\.\\(jsx\\?\\|json\\|scss\\)$' | tr '\n' ' ')",
    "f": "node_modules/.bin/prettier --config package.json --write",
    "lib": "babel server --out-dir lib --presets es2015,stage-2 --source-maps",
    "precommit": "lint-staged",
    "server": "yarn start",
    "start": "if-env NODE_ENV=production && yarn start:prod || yarn start:dev",
    "start:dev": "nodemon --watch 'src/**/*' ./src --exec babel-node --presets es2015,stage-2",
    "start:prod": "node lib"
  },
  "lint-staged": {
    "*.{js,jsx,json,scss}": [
      "yarn f",
      "git add"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "2",
    "apollo-server-koa": "^1.3.6",
    "concurrently": "^3.5.1",
    "dataloader": "^1.4.0",
    "dotenv": "^5.0.1",
    "got": "^8.3.1",
    "graphql": "^0.13.2",
    "graphql-date": "^1.0.3",
    "graphql-resolvers": "^0.2.2",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^3.0.2",
    "hibar": "^0.3.3",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.2.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.0.0",
    "koa-jwt": "^3.3.2",
    "koa-router": "^7.4.0",
    "koa-simple-static": "^1.1.0",
    "metascraper": "^3.11.5",
    "sqlite": "^3.0.0",
    "subscriptions-transport-ws": "^0.9.9"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "faker": "^4.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "nodemon": "^1.17.4",
    "prettier": "^1.12.1"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
